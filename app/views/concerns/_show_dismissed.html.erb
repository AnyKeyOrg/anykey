<div class="flexbox horizontal center wrap justify-space-between">
  <div class="panel-title">
    Dismissed Concern
  </div>
  <div class="flexbox horizontal center">
    <div class="panel-descriptor">
      Dismissed <%= l(@concern.reviewed_on, format: "%b. %-d, %Y Â· %-l:%M%P") %> [<%= link_to(@concern.reviewer.display_name, user_path(@concern.reviewer)) %>]
    </div>
    <%= render(partial: "concerns/watchable_toggle")%>
  </div>
</div>
<%= render(partial: "concerns/body") %>
<div class="concern-buttons flexbox horizontal-reverse wrap-reverse center">
  <%= link_to("Undismiss", undismiss_concern_path(@concern), method: :post, class: 'undismiss-button button', tabindex: "2") %>
  <%= link_to('Back', params[:back].present? ? params[:back] : concerns_path, class: "back-button mini button", tabindex: "1") %>
</div>
<%= render(partial: "concerns/comments")%>