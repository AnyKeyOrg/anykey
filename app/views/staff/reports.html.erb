<div class="page-section flexbox vertical stretch">
  <div class="inner flexbox vertical center">
    <div class="control-panel flexbox vertical start">
      
        <div class="filters horizontal center">
          <% Report::AVAILABLE_SCOPES.each do |filter| %>
            <% if @filter_category.to_s == filter[0].to_s %>
              <%= link_to("#{filter[1]} [#{@reports.count}]", staff_reports_path(f: filter[0]), class: "filter selected") %>
            <% else %>
             <%= link_to(filter[1], staff_reports_path(f: filter[0]), class: "filter") %>
            <% end %>
          <% end %>
        </div>
        <p></p>
        
        <div class="vertical start">
          <% if @reports.present? %>
          <%= render(partial: "staff/report_preview", collection: @reports, as: :report) %>
          <% else %>
          <div class="empty">
            No reports found.
          </div>
          <% end %>
        </div>
            
    </div>
  </div>
</div>
