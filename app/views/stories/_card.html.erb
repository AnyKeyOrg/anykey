<div class="card flexbox horizontal center wrap justify-space-between">
  <div class="flexbox vertical start">
  <%= link_to(image_tag(story_image_src(story, :card)), story.link, class: "card-image", onClick: "gtag('event', 'ClickThru', {'event_category': 'Stories', 'event_label': '#{story.headline.titlecase.gsub(/\W/, ' ').gsub(/\s/, '')}'});") %>
</div>
  <div class="card-body flexbox vertical start flex-1">
    <%= link_to(story.headline, story.link, class: "card-headline", onClick: "gtag('event', 'ClickThru', {'event_category': 'Stories', 'event_label': '#{story.headline.titlecase.gsub(/\W/, ' ').gsub(/\s/, '')}'});")%>
    <div class="card-text"><%= story.description %></div>
    <div class="card-descriptor"><%= l(story.published_on, format: "%b. %-d, %Y Â· %-l:%M%P ").upcase %></div>
  </div>
</div>