<div class="page-section flexbox vertical stretch">
  <div class="inner flexbox vertical center">
    <div class="control-panel flexbox vertical stretch">
      <div class="flexbox horizontal center wrap justify-space-between">
        <div class="panel-title">Stories</div>
        <div class="flexbox horizontal">
          <%= link_to("Add Story", new_story_path, class: "stealth") %>
          &nbsp;&nbsp;&nbsp;
          <%= link_to("Public Page", stories_path, class: "stealth") %>
        </div>
      </div>
      <div class="records-list flexbox vertical stretch">
        <% if @stories.present? %>
          <%= render(partial: "stories/row", collection: @stories, as: :story) %>
        <% else %>
        <div class="empty">
          No stories found.
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
