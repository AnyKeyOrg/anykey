    <div class="flexbox vertical stretch">
      <div class="flexbox horizontal">
        <div class="row-name"><%= comment.commenter.first_name %></div>
        <div class="row-date"><%= l(comment.created_at, format: "%b. %-d, %Y Â· %-l:%M%P ") %></div>
      </div>
      <div class="row-detail"><%= comment.body %></div>
    </div>
  </div>
</div>
