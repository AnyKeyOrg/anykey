<div class="page-section flexbox vertical stretch">
  <div class="inner flexbox vertical center">
    <div class="control-panel flexbox vertical stretch">
      <div class="flexbox horizontal center wrap justify-space-between">
        <div class="panel-title">Verification Review</div>
        <div class="panel-descriptor">
          Requested on <%= l(@verification.requested_on, format: "%b. %-d, %Y Â· %-l:%M%P").upcase %>
        </div>
      </div>
      <%= render(partial: "verifications/identity") %>
      <%= render(partial: "verifications/materials") %>
      <div class="verification-buttons flexbox horizontal-reverse wrap-reverse center">
        <% if @verification.pending? %>
          <%= link_to("Verify", eligible_verification_path(@verification, back: request.fullpath), class: 'verify-button button') %>
          <%= link_to("Deny", denied_verification_path(@verification, back: request.fullpath), class: 'deny-button button') %>
          <%= link_to("Ignore", ignore_verification_path(@verification), method: :post, class: 'ignore-button button') %>
        <% elsif @verification.reviewed? %>
          <% if @verification.ignored? %>
            <%= link_to("Unignore", unignore_verification_path(@verification), method: :post, class: 'unignore-button button') %>
          <% else %>
            <%= Verification::STATUSES[@verification.status.to_sym] %>
          <% end %>
        <% end %>
        <%= link_to('cancel', verifications_path, class: "stealth" ) %>
      </div>
    </div>
  </div>
</div>
