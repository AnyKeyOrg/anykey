<div class="page-section flexbox vertical stretch">
  <div class="inner flexbox vertical center">
    <div class="control-panel flexbox vertical stretch">
      <div class="flexbox vertical start wrap justify-space-between">
        <div class="panel-title">Batch Certificate Validation</div>
        
        <form action="<%= validate_certs_path %>" id="validate_certs_form" method="POST" enctype="multipart/form-data" class="flexbox vertical">
          <div style="hidden">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">            
          </div>
          <div class="item flexbox vertical stretch">
            <label for="validate_certs_input_csv" class="text-field">CSV File</label>
            <input id="validate_certs_input_csv" name="validate_certs_input_csv" type="file" tabindex="1">
          </div>
          <input id="validate_certs_submit" type="submit" class="button" value="Cross Check" tabindex="2" disabled>
        </form>

        [Results display area]<br>
                
      </div>
    </div>
  </div>
</div>