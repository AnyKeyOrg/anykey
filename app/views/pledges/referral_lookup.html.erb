<div id="referral-lookup" class="flexbox vertical center">
  <div class="page-section flexbox vertical stretch">
    <div class="inner flexbox vertical center">
      <div class="session-box flexbox vertical stretch">
        <form action="<%= referral_send_path %>" id="new_referral_send" method="POST" enctype="multipart/form-data" class="flexbox vertical stretch">
          <div style="hidden">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          </div> 
          <div class="title">
            Need us to resend your referral link?
          </div>
          <%= display_alerts %>
          <div class="item flexbox vertical stretch">
            <input id="pledge_email" name="pledge[email]" class="text-field" type="text" tabindex="1">
            <label for="pledge_email" class="text-field">Email</label>
          </div>
          <div class="last-item flexbox vertical end">
            <input id="new_referral_submit" name="commit" type="submit" class="button" value="Send Link" tabindex="2">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>