<% if params[:status] == 'returning' %>
  <% if @pledge.twitch_id.present? %>
    <%= render(partial: "pledges/returning_badged") %>
  <% else %>
    <%= render(partial: "pledges/returning_badgeless") %>
  <% end %>  
<% else %>
  <% if @pledge.twitch_id.present? %>
    <%= render(partial: "pledges/new_badged") %>
  <% else %>
    <%= render(partial: "pledges/new_badgeless") %>  
  <% end %>
<% end %>