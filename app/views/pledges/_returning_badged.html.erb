<div id="pledge" class="flexbox vertical center">
  <div class="page-section narrow flexbox vertical center">
    <div class="inner flexbox vertical start">
      <div class="section-title">
        <%= t(".title") %>
      </div>
      <div class="flexbox vertical start flex-1">
        <% if @pledge.badge_revoked? %>
          <p><%= t(".text-revoked", href: link_to(t(".link-text"), contact_path, class: "inline")).html_safe %></p>
        <% else %>
          <p><%= t(".text", href: link_to(t(".link-text"), contact_path, class: "inline")).html_safe %></p>
          <%= render(partial: "pledges/twitch_instructions") %>
        <% end %>
      </div>
    </div>
  </div>
</div>  
