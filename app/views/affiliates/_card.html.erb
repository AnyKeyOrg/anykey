<div class="card flexbox vertical start">
  <%= link_to(image_tag(affiliate_image_src(affiliate, :card)), !affiliate_links(affiliate).empty? ? affiliate_links(affiliate)[0][1] : '', class: "card-image") %>
  <div class="card-bottom">
    <div class="card-title"><%= affiliate.name %></div>
    <div class="card-subtitle"><%= affiliate.title.upcase %></div>
    <% unless affiliate_links(affiliate).empty? %>
    <div class="card-links flexbox horizontal center wrap">
      <% affiliate_links(affiliate).each do |link| %>
        <%= link_to(link[0].html_safe, link[1])%>
      <% end %>       
    </div>
    <% end %>
    <div class="card-text"><%= affiliate.bio %></div>
  </div>
</div>