<div id="affiliates" class="flexbox vertical center">
   <div class="page-header flexbox vertical center">
     <div class="inner flexbox vertical">
       <div id="tapestry">
         <div class="title-line-a">
           Affiliate
         </div>
         <div class="title-line-b">
           SHOWCASE
         </div>
       </div>
     </div>
   </div>
  <div class="page-section flexbox vertical stretch flex-1">
    <div class="inner flexbox vertical stretch">
      Showcase that shines the spotlight on our affiliates.
    </div>
  </div>
  <div class="page-section flexbox vertical stretch flex-1">
    <div class="inner flexbox vertical stretch">
      <div class="flexbox horizontal center wrap justify-space-between">
        <% if @affiliates.present? %>
          <%= render(partial: "affiliates/card", collection: @affiliates, as: :affiliate) %>
        <% else %>
        <div class="empty">
          No affiliates found.
        </div>
        <% end %>
      </div>  
    </div>
  </div>
</div>